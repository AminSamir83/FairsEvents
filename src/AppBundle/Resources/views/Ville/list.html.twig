{% endblock %}

{% block feature %}
    <div>

        <table class="table" style="margin-left:auto;margin-right:auto;display:block;width:100%;">
            <thead class="thead-dark">


            <th>
                Nom de la ville
            </th>
            <th>
                Pays
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>

            </tr>
            </thead>


            {% for ville in villes %}
            <tr>

                <td>
                    {{ ville.nom }}
                </td>
                <td>
                    {{ ville.pays }}
                </td>

                <td>
                    <a href="{{ path('updatevillepage', { 'id': ville.id}) }}" class="btn btn-primary">Update</a>
                </td>
                <td>
                    <a href="{{ path('deletevillepage', { 'id': ville.id}) }}" class="btn btn-primary">Delete</a>
                </td>

            </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
