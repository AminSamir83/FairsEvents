{% block feature %}
    <div class="container card-group">
        {% for foire in foires %}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{ asset('uploads/foire/'~foire.image) }}" alt="{{ asset(foire.nom) }}">
        <div class="card-body">
            <h5 class="card-title">{{ foire.nom }}</h5>
            <span>Ville&nbsp;</span><p class="card-text"> {{ foire.ville.nom }}</p>
            <span>Date de d√©but&nbsp;</span><p class="card-text"> {{ foire.dateDebut|date('d-m-Y\\TH:i:sP')}}</p>
            <span>Date de fin&nbsp;</span><p class="card-text"> {{ foire.dateFin|date('d-m-Y\\TH:i:sP') }}</p>
            <span>Nombre de stands total&nbsp;</span><p class="card-text"> {{ foire.nbreStandsTotal }}</p>
            <span>Nombre de stands restants&nbsp;</span><p class="card-text"> {{ foire.nbreStandsRest }}</p>
            <a href="{{ path('showfoirepage', { 'id': foire.id}) }}" class="btn btn-primary">update</a>
            <a href="{{ path('deletefoirepage', { 'id': foire.id}) }}" class="btn btn-primary">delete</a>
        </div>
    </div>
        {% endfor %}
    </div>
{% endblock %}
