{% extends "::base.html.twig" %}

{% block title %}AppBundle:Foire:list{% endblock %}
{% block header %}{% endblock %}
{% block pagetop %}
    <!-- Start Home Page Slider -->
    <section id="page-top">
        <!-- Carousel -->
        <div id="main-slide" class="carousel slide" data-ride="carousel">



            <!-- Carousel inner -->
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('images/header-bg-1.jpg') }}" alt="slider">
                    <div class="slider-content">
                        <div class="col-md-12 text-center">
                            <h1 class="animated3">
                                <span><strong>Stands List</strong> Page</span>
                            </h1>
                            <p class="animated2">
                                There is the list of   <br> our stands </p>

                        </div>
                    </div>
                </div>
                <!--/ Carousel item end -->




            </div>
            <!-- Carousel inner end-->


        </div>
        <!-- /carousel -->
    </section>
    <!-- End Home Page Slider -->




{% endblock %}

{% block feature %}
    <div>

        <table class="table" style="margin-left:auto;margin-right:auto;display:block;width:100%;">
            <thead class="thead-dark">


            <th>
                Numéro du stand
            </th>
            <th>
                Réservation
            </th>
            <th>
                Exposant
            </th>
            <th>
                Foire
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>

            </tr>
            </thead>


            {% for stand in stands %}
                <tr>

                    <td>
                        {{ stand.numero }}
                    </td>
                    <td>
                        {{ stand.isReserved }}
                    </td>
                    <td>
                        {{ stand.user.nom }}
                    </td>
                    <td>
                        {{ stand.foire.nom }}
                    </td>
                    <td>
                        <a href="{{ path('updatestandpage', { 'id': stand.id}) }}" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <a href="{{ path('deletestandpage', { 'id': stand.id}) }}" class="btn btn-primary">Delete</a>
                    </td>

                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
