{% extends "::base.html.twig" %}

{% block title %}Users list{% endblock %}
{% block header %}{% endblock %}
{% block pagetop %}
    <!-- Start Home Page Slider -->
    <section id="page-top">
        <!-- Carousel -->
        <div id="main-slide" class="carousel slide" data-ride="carousel">



            <!-- Carousel inner -->
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('images/header-bg-1.jpg') }}" alt="slider">
                    <div class="slider-content">
                        <div class="col-md-12 text-center">
                            <h1 class="animated3">
                                <span><strong>Users List</strong> Page</span>
                            </h1>
                            <p class="animated2">
                                There is the list of   <br> our users </p>

                        </div>
                    </div>
                </div>
                <!--/ Carousel item end -->




            </div>
            <!-- Carousel inner end-->


        </div>
        <!-- /carousel -->
    </section>
    <!-- End Home Page Slider -->




{% endblock %}

{% block feature %}
    <div>

        <table class="table" style="margin-left:auto;margin-right:auto;display:block;width:100%;">
            <thead class="thead-dark">


            <th>
                Nom
            </th>
            <th>
                Prenom
            </th>
            <th>
                login
            </th>
            <th>
                email
            </th>
            <th>
                cin
            </th>
            <th>
                telephone
            </th>
            <th>
                role
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>

            </tr>
            </thead>


            {% for user in users %}
                <tr>

                    <td>
                        {{ user.nom }}
                    </td>
                    <td>
                        {{ user.prenom }}
                    </td>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email  }}
                    </td>
                    <td>
                        {{ user.cin}}
                    </td>
                    <td>
                        {{ user.telephone}}
                    </td>
                    <td>
                        {% for role in user.roles  %}
                        {{ role}}
                        {% endfor %}
                    </td>

                    <td>
                        <a href="{{ path('updateuserpage', { 'id': user.id}) }}" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <a href="{{ path('deleteuserpage', { 'id': user.id}) }}" class="btn btn-primary">Delete</a>
                    </td>

                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
